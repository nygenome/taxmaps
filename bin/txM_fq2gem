################################################################################
### MODULES ####################################################################

from optparse import OptionParser
import sys

################################################################### /MODULES ###
################################################################################



################################################################################
### FUNCTIONS ##################################################################

################################################################# /FUNCTIONS ###
################################################################################



################################################################################
### ARGUMENTS,OPTIONS ##########################################################

parser = OptionParser(usage="\n%prog [options]", version="%prog v0.2")

parser.add_option(
	"-i",
	metavar = "FILE",
	type = "string",
	dest = "input_file",
	default = 'stdin',
	help = "Input fastq file (default = 'stdin')"
	)

(opt, args) = parser.parse_args()

######################################################### /ARGUMENTS,OPTIONS ###
################################################################################



################################################################################
### CONSTANTS ##################################################################

################################################################# /CONSTANTS ###
################################################################################



################################################################################
### MAIN #######################################################################

if __name__ == "__main__":
	if opt.input_file != 'stdin':
		ff = open(opt.input_file, 'r')
	else:
		ff = sys.stdin
	while True:
		ll = []
		l1 = ff.readline()
		if not l1:
			break
		ll.append(l1.strip())
		for i in xrange(3):
			ll.append(ff.readline().strip())
		sys.stdout.write(ll[0][1:] + '\t' + ll[1] + '\t' + ll[3] + '\t0\t.\n')
	if opt.input_file != 'stdin':
		ff.close()
	
###################################################################### /MAIN ###
################################################################################
